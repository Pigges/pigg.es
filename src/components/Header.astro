---
import HeaderLink from './HeaderLink.astro';
import Toggle from './ThemeChanger.astro'
---

<header>
    <div class="left">
        <a href="/" class="title">Pigg.es</a>
    </div>
    <div class="right">
        <Toggle />
        <label class="menu" for="menu">
            <input type="checkbox" id="menu">
            <div class="content">
                <svg
                class="hamburger"
                xmlns="http://www.w3.org/2000/svg"
                height="1em"
                viewBox="0 0 448 512"
                >
                    <!--! Font Awesome Free 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                    <path d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z"/>
                </svg>
                <nav class="links">
                    <HeaderLink href="/links">Links</HeaderLink>
                    <HeaderLink href="/blog">Blog</HeaderLink>
                    <HeaderLink href="/about">About</HeaderLink>
                </nav>
            </div>
        </label>
    </div>
</header>
<style>
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        min-height: 50px;
        background-color: var(--secondary-opacity);
        box-shadow: 0px 4px 4px var(--primary-opacity);
        border-bottom: 1px solid var(--primary);
        transition: padding 1s;
    }

    header .left, header .right {
        padding: 0 40px;
    }

    header .right .menu .hamburger {
        display: none;
    }

    header .left .title {
        font-size: 1.5rem;
        font-weight: bold;
        text-decoration: none;
    }

    header .right {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    header .right .menu #menu {
        display: none;
    }

    header .right .menu svg {
        fill: var(--primary);
    }

    header .right .links {
        display: flex;
        gap: 20px;
    }

    @media only screen and (max-width: 1000px) {
        header .left, header .right {
            padding: 0 20px;
        }
    }

    @media only screen and (max-width: 500px) {
        header .right .menu .hamburger {
            display: block;
        }

        header .right .links {
            display: none;
        }

        header .right .menu {
            display: flex;
            align-self: center;
            cursor: pointer;
        }

        header .right .menu svg {
            transition: transform 0.3s;
        }

        header .right .menu #menu:checked + .content .hamburger {
            transform: rotate(90deg);
        }

        header .right .menu #menu:checked + .content .links {
            position: absolute;
            top: 50px;
            left: 0;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            width: 100%;
            padding: 20px 0;
            background-color: var(--secondary);
            box-shadow: 0px 4px 4px var(--primary-opacity);
            border-bottom: 1px solid var(--primary);
            z-index: 100;
        }
    }
</style>