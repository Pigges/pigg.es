---
export interface Props {
	id: string;
    name: string;
    img: string;
}

const { id, name, img } = Astro.props;
---

<a href={`https://www.credly.com/badges/${id}`} target="_blank" class="badge">
    <div class="img unselectable">
        <img src={img.replace('{res}', '150x150')} alt={name}>
    </div>
    <p class="name">{name} <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512"><!--! Font Awesome Free 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M320 0c-17.7 0-32 14.3-32 32s14.3 32 32 32h82.7L201.4 265.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L448 109.3V192c0 17.7 14.3 32 32 32s32-14.3 32-32V32c0-17.7-14.3-32-32-32H320zM80 32C35.8 32 0 67.8 0 112V432c0 44.2 35.8 80 80 80H400c44.2 0 80-35.8 80-80V320c0-17.7-14.3-32-32-32s-32 14.3-32 32V432c0 8.8-7.2 16-16 16H80c-8.8 0-16-7.2-16-16V112c0-8.8 7.2-16 16-16H192c17.7 0 32-14.3 32-32s-14.3-32-32-32H80z"/></svg></p>
</a>
<style>
    .badge {
        display: flex;
        gap: 10px;
        align-items: center;
        flex-direction: column;
        text-decoration: none;
        width: 250px;
        flex-grow: 1;
        flex-shrink: 1;
        animation: popup 0.5s;
        padding: 20px 0;
        border-radius: 20px;
        background-color: var(--secondary-opacity);
        box-shadow: 0px 4px 4px var(--primary-opacity);
    }

    .badge .img {
        width: 150px;
        height: 150px;
        transition: transform 0.2s ease-in-out;
    }

    .badge .img:hover {
        transform: scale(1.1);
    }

    .badge .img img {
        width: 100%;
    }

    .badge .name {
        fill: var(--primary);
        font-weight: bold;
        font-size: 1rem;
        text-align: center;
        max-width: 200px;
    }

    .badge .name:hover {
        text-decoration: underline;
    }
</style>