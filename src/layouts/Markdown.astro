---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Layout from '../layouts/Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description="Hi! I'm Philip. Welcome to my website!">
	<div class="wrapper">
		<div class="md">
			<div class="meta">
				<h1>{frontmatter.title}</h1>
				<p><em>{frontmatter.description}</em></p>
			</div>
			<div class="hb"></div>
			<div class="text">
				<slot />
			</div>
		</div>
	</div>
</Layout>
<style is:global>
    .md {
        display: flex;
        flex-direction: column;
        margin: auto;
        gap: 20px;
        max-width: 600px;
    }

    .md .text {
        display: flex;
		flex-direction: column;
		justify-content: center;
		gap: 10px;
        padding: 0 10px;
        /* text-align: center; */
    }

    .md .text a {
		color: #08f;
        text-decoration: none;
	}

    .md .text a:hover {
        text-decoration: underline;
	}

    .md .text img {
        display: block;
        margin: 10px auto;
		max-width: 300px;
        padding: 10px 20px;
        border-radius: 20px;
        background-color: var(--secondary-opacity);
		box-shadow: 0px 4px 4px var(--primary-opacity);
	}

    .md .meta {
        text-align: center;
    }
</style>
