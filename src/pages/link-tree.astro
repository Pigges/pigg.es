---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Link Tree" description="Here is a list of places where you can find me.">
    <div class="wrapper">
        <h2>Link Tree</h2>
        <p>Here is a list of places where you can find me.</p>
    </div>
</Layout>
<style>
    .not-found {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 40px;
    }

    .bug {
        width: 50%;
        max-width: 300px;
        padding: 20px;
        border-radius: 10px 20px;
        background-color: var(--secondary-opacity);
        box-shadow: 0px 4px 4px var(--primary-opacity);
        transition: width 0.5s;
        animation: popup 0.5s;
    }

    .not-found .text {
        text-align: center;
    }

    @media only screen and (max-width: 700px) {
        .bug {
            width: 80%;
        }
    }
</style>